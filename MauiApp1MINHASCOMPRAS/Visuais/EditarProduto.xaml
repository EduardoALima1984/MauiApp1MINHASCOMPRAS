<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MauiApp1MINHASCOMPRAS.Visuais.EditarProduto"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="{Binding Descricao}">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Salvar" Clicked="OnSalvarClicked"/>
    </ContentPage.ToolbarItems>

    <VerticalStackLayout Padding="16" Spacing="12">
        <Label Text="Descrição do Produto:" />
        <Entry x:Name="txt_descricao" />

        <Label Text="Quantidade:" />
        <Entry x:Name="txt_quantidade" Keyboard="Numeric"/>

        <Label Text="Preço Unitário" />
        <Entry x:Name="txt_preco" Keyboard="Numeric" />
    </VerticalStackLayout>
</ContentPage>