<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MauiApp1MINHASCOMPRAS.Visuais.EditarProduto"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Editar Produto">

    <VerticalStackLayout Padding="16" Spacing="12">
        <Entry x:Name="txtDesc" Placeholder="Descrição" />
        <Entry x:Name="txtQtd"  Placeholder="Quantidade" Keyboard="Numeric" />
        <Entry x:Name="txtPreco" Placeholder="Preço" Keyboard="Numeric" />

        <Button Text="Salvar alterações" Clicked="OnSalvarClicked"/>
        <Button Text="Cancelar" Clicked="OnCancelarClicked" />
    </VerticalStackLayout>
</ContentPage>